extends ../layouts/layout.pug
block header
    include ../includes/header.pug
block content
    main
        div(class='page-header')
            h1= building.street + " " + building.street_nr + " WE "+ apartment.indication
            
        div(class='container')
            a(href='/apartments/'+ apartment.id+ '/edit' class='btn btn-default')
                span(class='glyphicon glyphicon-plus') Wohnungsdaten Ändern
            br
            br
            div(class="row")
                div(class="col-md-6")
                    table(class="table table-bordered")
                        thead
                            tr
                                th(colspan=2) Gebäudedaten
                        tbody
                            tr
                                td ID
                                td= building.building_id
                            tr
                                td Anschrift
                                td= building.street + " " + building.street_nr + ", " + building.post_code + " " + building.city
                            tr
                                td Baujahr
                                td= building.year_of_completion
                            tr
                                td Gesamtwohnfläche
                                td= building.total_living_area
                            tr
                                td Anzahl Wohnungen
                                td= building.number_flats
                           
                div(class="col-md-1")
                div(class="col-md-6")
                    table(class="table table-bordered")
                        thead
                            tr
                                th(colspan=2) Wohnungsdaten
                        tbody
                            tr
                                td ID
                                td= apartment.id
                            tr
                                td Bezeichnung
                                td= "WE " +apartment.indication
                            tr
                                td Wohnfläche
                                td= apartment.size
                            tr
                                td Grundsteuer
                                td= apartment.taxes

            div(class="row")
                div(class="col-md-6")
                    table(class="table table-bordered")
                        thead
                            tr
                                th(colspan="3") Mieterdaten
                        tbody
                                    tr
                                        td ID
                                        td= tenant.id
                                    tr
                                        td Name
                                        td= tenant.name
                                    tr
                                        td Grundmiete
                                        td= tenant.net_cold_rent
                                    tr
                                        td Betriebskosten
                                        td= tenant.property_charges
                                    tr
                                        td Betriebskostenabrechnung
                                        td
                                            form(action="/tenants/"+tenant.id+"/property_charges_accounting")
                                                div(class="form-group")
                                                    label(for="year") Jahr
                                                    select( class="form-control" id="year" placeholder="z.B. 2018" name="year" required)
                                                        option(default value="")
                                                        option 2022
                                                        option 2021
                                                        option 2020
                                                        option 2019
                                                        option 2018
                                                        option 2017
                                                        option 2016
                                                        option 2015
                                                        option 2014
                                                        option 2013
                                                input(type="submit" class="btn btn-primary" value="erstellen")
                                    tr
                                        td Betriebskostenabrechnung für möblierte Wohnungen
                                        td
                                            form(action="/tenants/"+tenant.id+"/property_charges_accounting_for_furnished_apartment")
                                                div(class="form-group")
                                                    label(for="year") Jahr
                                                    select( class="form-control" id="year" placeholder="z.B. 2018" name="year" required)
                                                        option(default value="")
                                                        option 2022
                                                        option 2021
                                                        option 2020
                                                        option 2019
                                                        option 2018
                                                        option 2017
                                                        option 2016
                                                        option 2015
                                                        option 2014
                                                        option 2013
                                                input(type="submit" class="btn btn-primary" value="erstellen") 
                div(class="col-md-6")
                    table(class="table table-bordered")
                        thead
                            tr
                                th(colspan="4") Individualkosten
                            tr
                                th Bezeichnung
                                th Jahr
                                th Eingabefeld
                                th button
                                
                        tbody
                            tr
                                form(action="/apartments/"+apartment.id+"/heating_costs" method="POST" )
                                    td  Heizkosten
                                    td
                                        div(class="form-group")
                                            select( class="form-control" id="year" placeholder="z.B. 2018" name="year" required)
                                                option(default value="")
                                                option 2022
                                                option 2021
                                                option 2020
                                                option 2019
                                                option 2018
                                                option 2017
                                                option 2016
                                                option 2015
                                                option 2014
                                                option 2013
                                    td
                                        div(class="form-group")
                                            input(type="text" pattern="[1-9][0-9]{1,3}([,.][0-9]{1,2})?" class="form-control costs-input" id="heating_costs" placeholder="z.B. 26" name="heating_costs" required)
                                    td   
                                        input(type="submit" class="btn btn-primary" value="hinzufügen")
                            tr
                                form(action="/apartments/"+apartment.id+"/electricity_costs" method="POST" )
                                    td  Stromkosten
                                    td
                                        div(class="form-group")
                                            select( class="form-control" id="year" placeholder="z.B. 2018" name="year" required)
                                                option(default value="")
                                                option 2022
                                                option 2021
                                                option 2020
                                                option 2019
                                                option 2018
                                                option 2017
                                                option 2016
                                                option 2015
                                                option 2014
                                                option 2013
                                    td
                                        div(class="form-group")
                                            input(type="text" pattern="[1-9][0-9]{1,3}([,.][0-9]{1,2})?" class="form-control costs-input" id="electricity_costs" placeholder="z.B. 26" name="electricity_costs" required)
                                    td   
                                        input(type="submit" class="btn btn-primary" value="hinzufügen")
                            tr
                                form(action="/apartments/"+apartment.id+"/communication_costs" method="POST" )
                                    td  Internet und Telefonie
                                    td
                                        div(class="form-group")
                                            select( class="form-control" id="year" placeholder="z.B. 2018" name="year" required)
                                                option(default value="")
                                                option 2022
                                                option 2021
                                                option 2020
                                                option 2019
                                                option 2018
                                                option 2017
                                                option 2016
                                                option 2015
                                                option 2014
                                                option 2013
                                    td
                                        div(class="form-group")
                                            input(type="text" pattern="[1-9][0-9]{1,3}([,.][0-9]{1,2})?" class="form-control costs-input" id="communication_costs" placeholder="z.B. 26" name="communication_costs" required)
                                    td   
                                        input(type="submit" class="btn btn-primary" value="hinzufügen")

block scripts                       
    script
        include ../../ressources/js/apartments/show.js